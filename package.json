  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "dev": "ts-node-dev src/index.ts",
    "dev:client": "npm --prefix frontend run dev",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:client\"",
    "dev:all-local": "bash -lc \"npm run dev & npm run dev:client & wait\"",
  "lint": "eslint -c eslint.config.cjs . --ext .js,.ts,.tsx || true",
  "lint:ci": "eslint -c eslint.config.cjs . --ext .js,.ts,.tsx && npx tsc --noEmit",
  "smoke": "node scripts/smoke_check.js",
    "start": "node build/index.js",
    "build:client": "npm --prefix frontend run build",
    "build:all": "npm run build:client && npm run tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
